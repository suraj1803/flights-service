{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",    
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,                                      
    "skipLibCheck": true                               
  },
  "include": ["src/**/*"]
}
